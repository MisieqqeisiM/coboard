{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=frontend/,server/,liaison/ frontend/dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A frontend/main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "$nanoid/": "https://deno.land/x/nanoid@v3.0.0/",
    "$fresh/": "https://deno.land/x/fresh@1.6.8/",
    "$socketio/": "https://deno.land/x/socket_io@0.2.0/",
    "$djwt/": "https://deno.land/x/djwt@v3.0.2/",
    "$socketio_client/": "npm:socket.io-client/",
    "$jsonwebtoken/": "npm:jsonwebtoken/",
    "$sleep/": "https://deno.land/x/sleep@v1.3.0/",
    "$mongo": "npm:mongodb",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/": "https://esm.sh/preact@10.19.6/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "$std/": "https://deno.land/std@0.211.0/"
  },
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" }
}
